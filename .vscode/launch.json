    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "cwd": "${workspaceFolder}/server",
            "preLaunchTask": "npm: build - server",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/dist/main.js",
            "outFiles": [
                "${workspaceFolder}/server/dist/**/*.js"
            ]
        }
    ]
}
